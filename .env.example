# Copy to .env and fill in values. Do NOT commit real secrets.

# Azure (Service Principal)
ARM_SUBSCRIPTION_ID=
ARM_TENANT_ID=
ARM_CLIENT_ID=
ARM_CLIENT_SECRET=
AZURE_LOCATION=eastus

# AWS (Access Key User or assumed role via env)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_DEFAULT_REGION=us-east-1

# GCP (Either set GOOGLE_APPLICATION_CREDENTIALS to path OR inline JSON here)
GCP_PROJECT=
GCP_REGION=us-central1
# Put raw JSON (single line) of service account key (optional alternative to file)
GCP_SA_KEY_JSON=
# If using a file instead, set GOOGLE_APPLICATION_CREDENTIALS env var before running login script.

# Terraform toggles
ENABLE_AZURE=true
ENABLE_AWS=true
ENABLE_GCP=true
ENABLE_LINODE=true
BOOTSTRAP_KIND=true
KIND_CLUSTER_NAME=capi-mgmt

# Linode / Akamai
LINODE_TOKEN=
LINODE_REGION=us-east
LINODE_SSH_PUBLIC_KEY=
LINODE_LABEL_PREFIX=capi
LINODE_SSH_PUBLIC_KEY_FILE=
